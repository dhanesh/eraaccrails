<p>
  <b>Name:</b>
  <%=h @product_list.name %>
</p>

<p>
  <b>Product:</b>
  <% @product_ids.each do |product_id|%>
    <%  if product_id.id == @product_list.product_id %>
    <td><%=h product_id.name %></td>
    <% end %>
    <% end %>
  <!--%=h @product_list.product_id %-->
</p>

<p>
  <b>Brand:</b>
  <% @brand_ids.each do |brand_id|%>
    <%  if brand_id.id == @product_list.brand_id %>
    <td><%=h brand_id.name %></td>
    <% end %>
    <% end %>
  <!--%=h @product_list.brand_id %-->
</p>

<p>
  <b>Price:</b>
  <%=h @product_list.price %>
</p>


